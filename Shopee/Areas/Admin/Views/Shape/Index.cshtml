@model IEnumerable<Shopee.Models.lkpShape>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<section class="panel">
                          <header class="panel-heading">
                             List All Shapes<span class="tools pull-right">
                                        <i class="glyphicon glyphicon-plus"></i>
                                        @Html.ActionLink("New", "Create")
                                     </span>
                          </header>
                          <table class="table table-striped table-advance table-hover">
                              <thead>
                              <tr>
                                  <th><i class="fa fa-bullhorn"></i> Shape</th>                                  
                                  <th><i class=" fa fa-edit"></i> Status</th>
                                  <th></th>
                              </tr>
                              </thead>
                              <tbody>
                              @foreach (var item in Model)
                              {
                              <tr>
                                  <td>   @Html.ActionLink(item.ShapeName, "Edit", new { id = item.ShapeID }) </td>
                                
                                 
                                  <td><span class="label 
                                  @if (item.Active.Value) { Html.Raw("label-success"); }
                                  else
                                  {
                                      Html.Raw("label-error");
                                  }
                                                             label-mini"> </span></td>
                                  <td>
                                  
                                   <button class="btn btn-danger btn-xs pull-right" data-placement="left" onclick="javascript:return ShowConfirmDelete('@Url.Action("delete", "Shape", new { @id = item.ShapeID })');"  data-toggle="tooltip" title="Delete" ><i class="glyphicon glyphicon-trash "></i></button>
                                     
                                  </td>
                              </tr>
                              }
                              </tbody>
                          </table>
                      </section> 